# Environment file for staging instance
# Use with: docker-compose --env-file .env.staging up -d

# Project name - this will be used to prefix containers and volumes
COMPOSE_PROJECT_NAME=totetrack-staging

# Database configuration
POSTGRES_DB=totetrack_staging
POSTGRES_USER=app
POSTGRES_PASSWORD=staging_password_here

# App settings
SECRET_KEY=staging_secret_key_here
ACCESS_TOKEN_EXPIRE_MINUTES=30
PASSWORD_RESET_TOKEN_EXPIRE_MINUTES=15
INITIAL_SUPERUSER_EMAIL=admin-staging@example.com
INITIAL_SUPERUSER_PASSWORD=staging_admin_password

# Port configuration - different ports to avoid conflicts
BACKEND_PORT=8881
FRONTEND_PORT=8889