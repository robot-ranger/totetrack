# Example environment file for the first instance (production)
# Copy this to .env to use as the default configuration

# Project name - this will be used to prefix containers and volumes
COMPOSE_PROJECT_NAME=totetrack-prod

# Database configuration
POSTGRES_DB=totetrack
POSTGRES_USER=app
POSTGRES_PASSWORD=your_secure_password_here

# App settings
SECRET_KEY=your_very_secure_secret_key_here
ACCESS_TOKEN_EXPIRE_MINUTES=30
PASSWORD_RESET_TOKEN_EXPIRE_MINUTES=15
INITIAL_SUPERUSER_EMAIL=admin@example.com
INITIAL_SUPERUSER_PASSWORD=admin_password_here

# Port configuration
BACKEND_PORT=8880
FRONTEND_PORT=8888